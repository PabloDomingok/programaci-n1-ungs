package practica0;

//Escribir un método static boolean estaOrdenado(int[] a)
//que dado un arreglo de enteros,
//devuelve verdadero si el arreglo está ordenado crecientemente 
//de menor a mayor, y falso en caso
//contrario.


public class Ejercicio28 {

	public static void main(String[] args) {
		int [] a= {1,2,3};
		System.out.println(estaOrdenado(a));
		

	}
	public static boolean estaOrdenado(int[] a) {
		for(int i=0; i<a.length-1;i++) {
			if(a[i]>a[i+1]) {
				return false;
			}
		}
		return true;
	}
	

}
